{
  "private": true,
  "name": "tarkov-tracker-monorepo",
  "type": "module",
  "workspaces": [
    "functions",
    "frontend"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "dev": "concurrently \"cd frontend && npm run dev\" \"npm run emulators\"",
    "build": "npm run build --workspaces",
    "build:functions": "npm run build --workspace=functions",
    "build:frontend": "npm run build --workspace=frontend",
    "emulators": "npm run build:functions && firebase emulators:start",
    "emulators:local": "firebase emulators:start --import=./local_data --export-on-exit=./local_data",
    "docs": "npm run build:functions && npm run swagger --workspace=functions && echo 'API docs generated! Open docs/index.html in your browser to view the Swagger UI.'",
    "deploy:dev": "firebase use tarkov-tracker-dev && npm run build:functions && npm run docs && cd frontend && npm run build:dev && cd .. && firebase deploy",
    "deploy:prod": "firebase use tarkovtracker-org && npm run build:functions && npm run docs && cd frontend && npm run build:prod && cd .. && firebase deploy",
    "lint": "eslint .",
    "format": "prettier --write --no-error-on-unmatched-pattern \"frontend/**/*.vue\" \"frontend/**/*.js\" \"frontend/**/*.ts\" \"functions/**/*.js\" \"functions/**/*.ts\"",
    "format:check": "prettier --check --no-error-on-unmatched-pattern \"frontend/**/*.vue\" \"frontend/**/*.js\" \"frontend/**/*.ts\" \"functions/**/*.js\" \"functions/**/*.ts\"",
    "clean": "rm -rf firebase-export-* *-debug.log firebase-debug*.log",
    "deps": "npx taze --r --I"
  },
  "devDependencies": {
    "firebase": "^12.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.3.0",
    "firebase-tools": "^14.11.1",
    "globals": "^16.3.0",
    "taze": "^19.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vue-eslint-parser": "^10.2.0"
  }
}
